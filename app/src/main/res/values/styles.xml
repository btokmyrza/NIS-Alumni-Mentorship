<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/nis_brown</item>
        <item name="android:colorAccent">@color/nis_brown</item>
        <item name="android:textColor">@color/nis_brown</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:colorControlActivated">@color/nis_brown</item>
    </style>

    <style name="DialogButtonStyled" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/nis_brown</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@null</item>
        <item name="chipStrokeColor">@color/nis_brown</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/nis_brown</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#7D7A7A</item>
        <item name="colorControlActivated">#ffc922</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded</item>
    </style>

    <style name="report_dialog_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="fontWeight">500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="report_dialog_button">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="backgroundTint">@color/nis_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="marginHorizontal">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="fontWeight">300</item>
        <item name="android:textSize">19sp</item>
        <item name="lineHeight">26sp</item>
    </style>

</resources>